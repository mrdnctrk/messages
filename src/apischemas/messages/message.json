{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "message"
  ],
  "properties": {
    "id": {
      "type": "string",
      "readOnly": true
    },
    "message": {
      "type": "string"
    },
    "createdAt": {
      "type": "integer",
      "readOnly": true,
      "description": "Epoch timestamp indicating when the message was created"
    },
    "updatedAt": {
      "type": "integer",
      "readOnly": true,
      "description": "Epoch timestamp indicating when the message was last updated"
    },
    "isPalindrome": {
      "type": "boolean",
      "readOnly": true
    }
  }
}
