{
  "openapi": "3.0.1",
  "info": {
    "title": "Messages",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:5000/{basePath}",
      "variables": {
        "basePath": {
          "default": "api"
        }
      }
    }
  ],
  "paths": {
    "/messages": {
      "get": {
        "tags": [
          "messages"
        ],
        "summary": "Get the list of  message",
        "operationId": "getMessages",
        "responses": {
          "201": {
            "description": "200 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./messages/messageList.json"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "messages"
        ],
        "summary": "Create a message",
        "operationId": "createMessage",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./messages/message.json"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "201 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./messages/message.json"
                }
              }
            }
          },
          "400": {
            "$ref": "./errors/invalidRequest.json"
          }
        }
      }
    },
    "/messages/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "The id of the message",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": [
          "messages"
        ],
        "summary": "Retrieve a message",
        "operationId": "getMessage",
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./messages/message.json"
                }
              }
            }
          },
          "404": {
            "$ref": "./errors/resourceNotFound.json"
          }
        }
      },
      "put": {
        "tags": [
          "messages"
        ],
        "summary": "Update a message",
        "operationId": "updateMessage",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./messages/message.json"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./messages/message.json"
                }
              }
            }
          },
          "400": {
            "$ref": "./errors/invalidRequest.json"
          },
          "404": {
            "$ref": "./errors/resourceNotFound.json"
          }
        }
      },
      "delete": {
        "tags": [
          "messages"
        ],
        "summary": "Delete a message",
        "operationId": "deleteMessage",
        "responses": {
          "204": {
            "description": "204 response"
          },
          "404": {
            "$ref": "./errors/resourceNotFound.json"
          }
        }
      }
    },
    "/health/readiness": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Retrieve api server readiness",
        "operationId": "getReadiness",
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./health/readiness.json"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}